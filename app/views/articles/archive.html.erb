<div class="article ">
  <table>
    <tr>
    <% @articles.in_groups_of((@articles.length/2.0).ceil, false) do |articles| %>
        <td>
          <table>
        <% articles.each do |article| %>
        <tr>
          <td>
            <div class = "article_block">
              <h2 class = "rubric">
                <%= h article.rubric %>
              </h2>
             <div>
                <h1>
                 <%= h article.title %>
               </h1>
                <div class="article_content">
                   <%= article.content %>
                </div>
                <h2 class="article autor">
                  <%= h article.autor %>
                </h2>
              </div>
            </div>
            </td>
          </tr>
        <% end %>
          </table>
        </td>
    <% end %>
    </tr>
  </table>
</div>
